                {
                    "type": "RotationSpeed",
                    "link": {
                        "type": "Integer",
                        "topicGet": "(1)/climate/(1)/fan_mode/state",
                        "topicSet": "(1)/climate/(1)/fan_mode/command"
                    },
                    "minValue": 1,
                    "maxValue": 6
                }
            ]
        },
