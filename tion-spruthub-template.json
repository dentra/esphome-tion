                        "type": "String",
                        "topicSearch": "(.*)/climate/.*/mode/state",
                        "topicGet": "(1)/climate/(1)/mode/state",
                        "topicSet": "(1)/climate/(1)/mode/command",
                        "map": {
                            "INACTIVE": "off",
                            "ACTIVE": "fan_only;heat"
                        }
                    }
                },
                {
                    "type": "CurrentTemperature",
                    "link": {
