                {
                    "type": "CurrentHeaterCoolerState",
                    "link": {
                        "type": "String",
                        "topicGet": "(1)/climate/(1)/mode/state",
                        "map": {
                            "INACTIVE": "off",
                            "HEATING": "heat",
                            "COOLING": "fan_only"
                        }
                    },
                    "validValues": "INACTIVE,HEATING,COOLING"
