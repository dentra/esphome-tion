climate:
  - platform: tion
    id: tion_climate
    name: None # use friendly_name
    # add HEAT_COOL mode to support turn_on without touching current heater mode.
    enable_heat_cool: True

sensor:
  # Temperatire of air before heater, °C (celsius).
  - platform: tion
    id: tion_outdoor_temperature
    type: outdoor_temperature
    name: Outdoor Temperature
{%- if type in ["4s", "lt"] %}
  # Optional, Heater power, W (watt).
  - platform: tion
    id: tion_heater_power
    type: heater_power
    name: Heater power
{%- endif %}
  # Current productivity, m³/h (cubic meters per hour).
  - platform: tion
    id: tion_productivity
    type: productivity
    name: Productivity
  # Filter time left counter.
  - platform: tion
    id: tion_filter_time_left_days
    type: filter_time_left_days
    name: Filter Time Left
  # Boost time left sensor.
  - platform: tion
    id: tion_boost_time_left
    type: boost_time_left
    name: Boost Time Left

switch:
{%- if type != "o2" %}
  # Buzzer control switch.
  - platform: tion
    id: tion_buzzer
    type: sound
    name: Buzzer
{%- endif %}
{%- if type == "4s" %}
  # Led control switch.
  - platform: tion
    id: tion_led
    type: led
    name: Led
{%- endif %}
{%- if type == "4s" %}
  # Recirculation control switch.
  - platform: tion
    id: tion_recirculation
    type: recirculation
    name: Recirculation
{%- endif %}
  # Boost/Turbo switch.
  - platform: tion
    id: tion_boost
    type: boost
    name: Boost
    # Optional, Heater state when boost enabled. If not set current state will be used.
    #heater: False
    # Optional, Target heater temperature state when boost enabled.
    #           If not set or set to 0 - current target temperture will be used.
    #temperature: 10

number:
  # Configure boost time.
  - platform: tion
    id: tion_boost_time
    type: boost_time
    name: Boost Time
    initial_value: 20min
    restore_value: true

select:
{%- if type == "3s" %}
  # Optional, Air Intake control.
  - platform: tion
    id: tion_air_intake
    type: air_intake
    name: Air Intake
{%- endif %}

binary_sensor:
  # Informs about state receiving problem from the breezer.
  - platform: tion
    id: tion_state_problem
    type: state
    name: State Problem
{%- if type == "lt" %}
  # Gate state control.
  - platform: tion
    id: tion_gate_state
    type: gate
    name: Gate State
{%- endif %}
  # Filter warning state.
  - platform: tion
    id: tion_filter_worn_out
    type: filter
    name: Filter Worn Out

text_sensor:
  # Tion firmware version.
  - platform: tion
    id: tion_firmware_version
    type: firmware_version
    name: Version
  # Reports Tion's errors (EC) and warnings (WS).
  - platform: tion
    id: tion_errors
    type: errors
    name: Errors

button:
{%- if type != "o2" %}
  # Reset filter button.
  - platform: tion
    id: tion_reset_filter
    type: reset_filter
    name: Reset Filter
    # Reset filter confirmation. When off then reset_filter will not work.
    confirm:
      name: Reset Filter Confirm
{%- endif %}
